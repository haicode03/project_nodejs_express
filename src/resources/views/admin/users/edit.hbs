<div class="container">
  <div class="page-inner">
    <div class="page-header">
      <h3 class="fw-bold mb-3">Quản lý tài khoản</h3>
      <ul class="breadcrumbs mb-3">
        <li class="nav-home">
          <a href="/">
            <i class="icon-home"></i>
          </a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
          <a href="#">Chỉnh sửa thông tin</a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Chỉnh sửa thông tin</div>
          </div>
          <div class="card-body">
            <form class="mt-4" method="POST" action="/admin/users/{{user._id}}?_method=PUT">
                <div class="form-group">
                    <label for="name">Tên tài khoản người dùng</label>
                    <input type="text" class="form-control" value="{{user.username}}" id="name" name="username">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" value="{{user.email}}" id="email" name="email">
                </div>
                <div class="form-group">
                    <label   label for="password">Mật khẩu</label>
                    <input type="password" class="form-control" value="{{user.password}}" id="password" name="password">
                </div>
                <div class="form-group mb-4">
                    <select style="background-color: #63b2ca;" class="form-select-lg" id="role" name="role">
                        <option style="background-color: #7e979e;" value="" disabled selected>Chức vụ</option>
                        <option style="background-color: #7e979e;" value="teacher">Giảng viên</option>
                        <option style="background-color: #7e979e;" value="student">Sinh viên</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Lưu lại</button>
                <a href="/admin/users/show" class="btn btn-warning">Quay lại</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>