<div class="container">
  <div class="page-inner">
    <div class="page-header">
      <h3 class="fw-bold mb-3">Danh sách lớp học phần</h3>
      <ul class="breadcrumbs mb-3">
        <li class="nav-home">
          <a href="/">
            <i class="icon-home"></i>
          </a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
          <a href="#">Thêm thông tin</a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Thêm thông tin lớp học phần</div>
          </div>
          <div class="card-body">
            <form method="POST" action="/classes/store">
              <div class="form-group">
                <label for="course_id">Học phần</label>
                <select class="form-control" id="course_id" name="course_id">
                  {{#each courses}}
                  <option value="{{this._id}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group">
                <label for="name">Lớp học phần</label>
                <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="form-group">
                <label for="room">Phòng học</label>
                <input type="text" class="form-control" id="room" name="room">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a href="#" class="btn btn-warning">Quay lại</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>