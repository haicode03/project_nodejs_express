<section class="vh-100" style="background-color: #82aee7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="../assets/img/Logo_Vien _KTCN.png" alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
              
                <!-- Hiển thị thông báo lỗi hoặc thành công -->
                {{#if errorMessage}}
                <div class="alert alert-danger" role="alert">
                  {{errorMessage}}
                </div>
                {{/if}}
                {{#if successMessage}}
                <div class="alert alert-success" role="alert">
                  {{successMessage}}
                </div>
                {{/if}}

                <form action="/auth/register" method="POST">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <img style="width: 70%;" src="../assets/img/kaiadmin/logo_dark.svg" alt="logo">
                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Tạo tài khoản mới</h5>

                  <!-- Trường tên người dùng -->
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Username" required />
                  </div>

                  <!-- Trường email -->
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="Email address" required />
                  </div>

                  <!-- Trường chức vụ -->
                  <div class="form-outline mb-4">
                      <select style="background-color: #63b2ca;" class="form-select-lg" id="role" name="role" required>
                          <option style="background-color: #7e979e;" value="" disabled selected>Chức vụ</option>
                          <option style="background-color: #7e979e;" value="teacher">Giảng viên</option>
                          <option style="background-color: #7e979e;" value="student">Sinh viên</option>
                      </select>
                  </div>

                  <!-- Trường mật khẩu -->
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Mật khẩu" required />
                  </div>

                  <!-- Trường xác nhận mật khẩu -->
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu" required />
                  </div>
                  
                  <div class="pt-1 mb-4">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" type="submit">Đăng ký</button>
                  </div>
                  
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Bạn đã có tài khoản? <a href="/auth/login" style="color: #067ca0;">Đăng nhập.</a></p>
                  <a href="#!" class="small text-muted">Điểu khoản sử dụng.</a>
                  <a href="#!" class="small text-muted">Chính sách bảo mật</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
