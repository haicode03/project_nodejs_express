<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Chỉnh sửa thông tin nhóm sinh viên</h3>
        </div>

        <form action="/student_groups/{{group._id}}/update" method="POST">
            <div class="form-group mb-3">
                <label for="name">Tên nhóm</label>
                <input type="text" class="form-control" id="name" name="name" value="{{group.name}}" required>
            </div>

            <div class="form-group mb-3">
                <label for="topic_id">Chọn đề tài</label>
                <select class="form-select" id="topic_id" name="topic_id">
                    <option value="">Nhập đề tài mới</option>
                    {{#each topics}}
                    <option value="{{this._id}}" {{#ifEquals this._id ../group.topic_id._id}}selected{{/ifEquals}}>
                        {{this.name}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="new_topic">Hoặc nhập đề tài mới</label>
                <input type="text" class="form-control" id="new_topic" name="new_topic" placeholder="Nhập tên đề tài mới">
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/student_groups/show" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
