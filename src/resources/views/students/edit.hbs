<div class="container">
  <div class="page-inner">
    <div class="page-header">
      <h3 class="fw-bold mb-3">Chỉnh sửa thông tin</h3>
      <ul class="breadcrumbs mb-3">
        <li class="nav-home">
          <a href="/">
            <i class="icon-home"></i>
          </a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
          <a href="#">Chỉnh sửa thông tin</a>
        </li>
        <li class="separator">
          <i class="icon-arrow-right"></i>
        </li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Chỉnh sửa thông tin</div>
          </div>
          <div class="card-body">
            <form class="mt-4" method="POST" action="/students/{{students._id}}?_method=PUT">
            <div class="form-group">
                <label for="class_id">Tên lớp học phần</label>
                <select class="form-control" id="class_id" name="class_id">
                  {{#each classes}}
                  <option value="{{this._id}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group">
                <label for="name">Tên sinh viên</label>
                <input type="text" class="form-control" value="{{students.name}}" id="name" name="name">
              </div>
              <div class="form-group">
                <label label for="dean">Mã sinh viên</label>
                <input type="text" class="form-control" value="{{students.student_code}}" id="student_code" name="student_code">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" value="{{students.email}}" id="email" name="email">
              </div>
              <div class="form-group">
                <label label for="phone">Số điện thoại</label>
                <input type="text" class="form-control" value="{{students.phone}}" id="phone" name="phone">
              </div>
              <div class="form-group">
                <label label for="dob">Ngày sinh</label>
                <input type="text" class="form-control" value="{{students.dob}}" id="dob" name="dob">
              </div>
              <div class="form-group">
                <label label for="address">Địa chỉ</label>
                <input type="text" class="form-control" value="{{students.address}}" id="address" name="address">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-success">Lưu lại</button>
                <a href="/students/show" class="btn btn-warning">Quay lại</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>