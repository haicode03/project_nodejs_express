<div class="container">
    <div class="page-inner">
        <h3 class="fw-bold mb-3">Danh sách nhóm</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Danh sách nhóm của lớp</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên nhóm</th>
                                        <th>Thành viên</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each groups}}
                                    <tr>
                                        <td>{{this.name}}</td>
                                        <td>
                                            <ul>
                                                {{#each this.members}}
                                                <li>{{this.name}} - {{this.student_code}}</li>
                                                {{/each}}
                                            </ul>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
